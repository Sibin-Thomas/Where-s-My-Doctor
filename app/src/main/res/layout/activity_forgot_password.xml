<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sibinthomas.wheresmydoctor.ForgotPassword"
    android:background="@drawable/login">

    <Button
        android:id="@+id/button15"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/editText10"
        android:layout_alignStart="@+id/editText10"
        android:layout_below="@+id/button14"
        android:layout_marginTop="47dp"
        android:background="@drawable/buttonlayout"
        android:padding="10dp"
        android:text="Get Password"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button14"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/editText10"
        android:layout_alignStart="@+id/editText10"
        android:layout_below="@+id/editText10"
        android:layout_marginTop="23dp"
        android:background="@drawable/buttonlayout"
        android:onClick="showDatePickerDialog1"
        android:padding="10dp"
        android:text="Give Date of Birth"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:background="@drawable/textfieldlayout"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />
</RelativeLayout>
