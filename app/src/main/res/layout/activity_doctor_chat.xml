<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sibinthomas.wheresmydoctor.DoctorChat"
    android:background="@drawable/login">

    <Button
        android:id="@+id/button11"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/buttonlayout"
        android:padding="10dp"
        android:text="Select Patient"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/textfieldlayout"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Type your message here"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button10"
        android:layout_toStartOf="@+id/button10"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lview"
        android:background="@drawable/textfieldlayout"
        android:padding="10dp"
        android:text="SEND"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="10sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button11"
        android:divider="@android:color/background_light"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button11"
        android:layout_alignRight="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="10dp" />
</RelativeLayout>
